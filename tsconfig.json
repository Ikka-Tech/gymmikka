{
  "include": ["src/**/*.ts"],      // Specify files to include in compilation
  "exclude": ["node_modules"],       // Specify files to exclude from compilation
  "compilerOptions": {
    "target": "es6",                // Specify the ECMAScript target version
    "module": "commonjs",           // Specify module code generation
    "outDir": "./dist",             // Specify the output directory for compiled files
    "rootDir": "./src",             // Specify the root directory of input files
    "strict": true,                 // Enable all strict type-checking options
    "esModuleInterop": true,        // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,           // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforces consistent casing in file names
    "resolveJsonModule": true,      // Allows importing .json files
    "isolatedModules": true,         // Enable transpiling each file as a separate module (helps with faster builds)
  }
}
